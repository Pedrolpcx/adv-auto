<!DOCTYPE html>
<html>
<head>
	<title>Site com imagem aleatória</title>
</head>
<body>
	<h1>Site com imagem aleatória</h1>

	<!-- Div onde a imagem será exibida -->
	<div id="imagem">
		<!-- Imagem será adicionada aqui pelo JavaScript -->
	</div>

	<script>
		// Array com os caminhos das imagens
		let imagens = [
			"caminho/da/imagem1.jpg",
			"caminho/da/imagem2.jpg",
			"caminho/da/imagem3.jpg"
		];

		// Escolhe uma imagem aleatória
		let imagemAleatoria = imagens[Math.floor(Math.random() * imagens.length)];

		// Cria uma tag <img> com a imagem aleatória
		let img = document.createElement("img");
		img.src = imagemAleatoria;

		// Adiciona a imagem à div
		document.getElementById("imagem").appendChild(img);
	</script>
</body>
</html>
